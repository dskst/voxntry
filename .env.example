# Environment Configuration Template
# Copy this file to .env.local and fill in the values

# JWT Secret (Server-side only)
# REQUIRED: Use a strong random string (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Conference Authentication (Server-side only)
# REQUIRED: Use bcrypt hash for production. Generate with: node scripts/hash-password.js "yourPassword"
# Example bcrypt hash: $2b$12$K9Z8fMx... (DO NOT use plain text passwords in production)
CONFERENCE_DEMO_CONF_PASSWORD=

# Google Sheets
# REQUIRED: Your Google Sheets spreadsheet ID
NEXT_PUBLIC_DEMO_SPREADSHEET_ID=

# Development Auto-Login (Optional, for local development only)
NEXT_PUBLIC_DEV_AUTO_LOGIN=true
NEXT_PUBLIC_DEV_CONFERENCE_ID=demo-conf
NEXT_PUBLIC_DEV_PASSWORD=
NEXT_PUBLIC_DEV_STAFF_NAME=DevUser

# Environment
NODE_ENV=development
